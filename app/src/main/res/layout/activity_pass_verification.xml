<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgrnd"
    tools:context=".Verification.PassVerificationActivity">


    <TextView
        android:id="@+id/attemptremain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Attempt Remaining: 1/3"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_marginTop="90dp"
        />


    <TextView
        android:id="@+id/passhint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_below="@+id/attemptremain"
        android:layout_marginTop="30dp"
        />

    <EditText
        android:id="@+id/passwrdedit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittextborder"
        android:layout_below="@+id/passhint"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="20dp"
        android:textColor="@android:color/white"
        android:hint="type here"
        android:textColorHint="@android:color/white"
        />

    <Button
        android:id="@+id/passconfirmbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:layout_below="@+id/passwrdedit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@android:color/white"
        android:textColor="@color/colorPrimary"
        />
</RelativeLayout>